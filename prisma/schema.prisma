generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  address   String?
  phone     String?
  orders    Order[]
  createdAt DateTime @default(now())
}

model Order {
  id          String       @id @default(cuid())
  orderNumber String       @unique
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  items       OrderItem[]
  total       Float
  status      OrderStatus  @default(PROCESSING)
  address     String
  createdAt   DateTime     @default(now())
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  wineId    String
  name      String
  price     Float
  quantity  Int
  imageUrl  String
}

enum OrderStatus {
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELED
}
